DATABASE_URL=postgresql+asyncpg://app:app@localhost:5432/blockremote
REDIS_URL=redis://localhost:6379/0

# JWT / JWKS (prefer RS/ES). For local dev you can use JWT_PRIVATE_KEY_PEM and JWT_PUBLIC_KEY_PEM.
JWKS_URL=http://localhost:8000/internal/jwks
JWT_ACTIVE_KID=local-dev
JWT_PRIVATE_KEY_PEM=-----BEGIN PRIVATE KEY-----replace-----END PRIVATE KEY-----
JWT_PUBLIC_KEY_PEM=-----BEGIN PUBLIC KEY-----replace-----END PUBLIC KEY-----
JWT_ALGORITHM=RS256
JWT_EXPIRE_MINUTES=15
JWT_ISSUER=https://blockremote.local
JWT_AUDIENCE=blockremote-api
JWT_CLOCK_SKEW_SECONDS=30

# Refresh / fingerprint
REFRESH_FINGERPRINT_SECRET=change-me-fp
REFRESH_BASE_TTL_MINUTES=10080
REFRESH_MAX_TTL_MINUTES=20160
REFRESH_EXTEND_MINUTES=1440

ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=[]
WS_ALLOWED_ORIGINS=[]
BILLING_WEBHOOK_SECRET=change-webhook
